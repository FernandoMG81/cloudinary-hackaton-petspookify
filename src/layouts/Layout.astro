---
import { ViewTransitions } from 'astro:transitions';
import LanguageSelector from '../components/LanguageSelector.astro';



interface Props {
	title: string;
  lang: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="PETSPOOKIFY - Halloween Image Transformation App" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <link rel="preload" href="/fonts/spooky.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/Scary.ttf" as="font" type="font/ttf" crossorigin />
		<title>{title}</title>
	</head>
	<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white min-h-screen transition-colors duration-300">
    <ViewTransitions />
    <LanguageSelector currentLanguage={lang} />
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --accent: 255, 102, 0;
    --accent-light: 255, 153, 102;
    --accent-dark: 204, 51, 0;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --expo-in: linear(
    0 0%, 0.0085 31.26%, 0.0167 40.94%,
    0.0289 48.86%, 0.0471 55.92%,
    0.0717 61.99%, 0.1038 67.32%,
    0.1443 72.07%, 0.1989 76.7%,
    0.2659 80.89%, 0.3465 84.71%,
    0.4419 88.22%, 0.554 91.48%,
    0.6835 94.51%, 0.8316 97.34%, 1 100%
  );
  --expo-out: linear(
    0 0%, 0.1684 2.66%, 0.3165 5.49%,
    0.446 8.52%, 0.5581 11.78%,
    0.6535 15.29%, 0.7341 19.11%,
    0.8011 23.3%, 0.8557 27.93%,
    0.8962 32.68%, 0.9283 38.01%,
    0.9529 44.08%, 0.9711 51.14%,
    0.9833 59.06%, 0.9915 68.74%, 1 100%
  );
  }
  html {
    font-family: system-ui, sans-serif;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  /* View Transition Styles */
  ::view-transition-group(root) {
    animation-timing-function: var(--expo-in)
  }

  ::view-transition-new(root) {
    mask: url('https://media.tenor.com/j11P8fur4msAAAAi/sappy-seals.gif') top / 0 no-repeat;
    animation: scale 2s;
  }

  ::view-transition-old(root),
  .dark::view-transition-old(root) {
    animation: scale 2s;
  }

  @keyframes scale {
    0% {
      mask-size: 0;
    }
    10% {
      mask-size: 50vmax;
    }
    90% {
      mask-size: 50vmax;
    }
    100% {
      mask-size: 2000vmax;
    }
  }
</style>
